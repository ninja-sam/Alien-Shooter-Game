<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@drawable/farm"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hunt the Aliens"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:alpha="0.75"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_alien"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
      android:layout_gravity="center_horizontal"
        android:src="@drawable/group_aliens" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/creative_button"
            android:alpha="0.65"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:text="Play Game"
            android:onClick="startGame"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/creative_button"
            android:alpha="0.65"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:text="High Score"
            android:onClick="ranking"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/creative_button"
            android:alpha="0.65"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:text="player data"
            android:onClick="playerData" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:background="@drawable/creative_button"
            android:alpha="0.65"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:text="exit"
            android:onClick="endGame"/>

    </LinearLayout>

</LinearLayout>